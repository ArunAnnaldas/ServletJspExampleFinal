

import io.cucumber.java.Scenario;
import org.junit.Before;
import org.junit.Test;
import org.mockito.Mockito;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertNull;

public class FormResponseTest {

    private FormResponse formResponse;
    private Scenario mockScenario;

    @Before
    public void setUp() {
        formResponse = new FormResponse();
        mockScenario = Mockito.mock(Scenario.class);
    }

    @Test
    public void testGettersAndSetters() {
        // Test setting and getting the scenario
        formResponse.setScenario(mockScenario);
        assertEquals(mockScenario, formResponse.getScenario());

        // Test setting and getting the error
        formResponse.setError("Sample Error");
        assertEquals("Sample Error", formResponse.getError());

        // Test changing the error message
        formResponse.setError("New Error");
        assertEquals("New Error", formResponse.getError());
    }

    @Test
    public void testDefaultValues() {
        FormResponse newFormResponse = new FormResponse();
        assertNull(newFormResponse.getScenario());
        assertNull(newFormResponse.getError());
    }
}
