

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.context.annotation.PropertySource;
import org.springframework.context.annotation.PropertySources;
import org.springframework.test.context.junit.jupiter.SpringExtension;

import java.util.Map;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertNotNull;

@ExtendWith(SpringExtension.class)
@SpringBootTest
@PropertySources({
    @PropertySource("classpath:/config/locator.yaml"),
    @PropertySource("classpath:/config/locator2.yaml")
})
public class LocatorPropertiesTest {

    @Autowired
    private LocatorProperties locatorProperties;

    @BeforeEach
    public void setUp() {
        locatorProperties.setFiles(new String[]{"classpath:/config/locator.yaml", "classpath:/config/locator2.yaml"});
    }

    @Test
    public void testLoadYamlProperties() throws Exception {
        Map<String, String> properties = locatorProperties.loadYamlProperties();
        assertNotNull(properties);
        assertEquals("value1", properties.get("key1"));
        assertEquals("value2", properties.get("key2"));
    }

    @Test
    public void testGetPrefixedValue() {
        String value = locatorProperties.getPrefixedValue("key1");
        assertEquals("value1", value);
    }

    @Test
    public void testAppUrl() {
        assertEquals("http://dev.example.com", locatorProperties.getAppUrl());
    }
}
